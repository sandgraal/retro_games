{
  "name": "dragons-hoard-atlas",
  "version": "2.0.0",
  "description": "A modern, type-safe retro game collection tracker with reactive state management",
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build:legacy": "npm run build:config && npm run build:css",
    "build:config": "node scripts/generate-config.js",
    "build:css": "node scripts/build-css.js",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src scripts --ext .ts,.js",
    "lint:fix": "eslint src scripts --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,css,html}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "seed:generate": "node scripts/generate-seed-sql.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "serve:lighthouse": "vite preview --port 4173",
    "serve:dist": "vite preview --port 4173",
    "lighthouse": "npx @lhci/cli autorun --config=lighthouserc.json",
    "sitemap": "node scripts/generate-sitemap.js",
    "prices:update": "node scripts/update-price-snapshots.js",
    "archive:media": "node scripts/archive-media.js",
    "audit:covers": "node scripts/audit-missing-covers.js",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandgraal/retro_games.git"
  },
  "keywords": [
    "retro-games",
    "game-collection",
    "typescript",
    "vite",
    "reactive"
  ],
  "author": "Dragon's Hoard Atlas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sandgraal/retro_games/issues"
  },
  "homepage": "https://github.com/sandgraal/retro_games#readme",
  "engines": {
    "node": ">=20.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^4.0.15",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "masonry-layout": "^4.2.2",
    "node-fetch": "^3.3.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "imagesloaded": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,json,md,css,html}": [
      "prettier --write"
    ]
  }
}
