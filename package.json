{
  "name": "retro_games",
  "version": "1.0.0",
  "description": "WIP: A fast, private, and no-nonsense tracker for classic and retro games. A place for retro gamers to get their fix.",
  "main": "app.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:config": "node scripts/generate-config.js",
    "lint": "eslint app.js app scripts",
    "lint:fix": "eslint app.js app scripts --fix",
    "format": "prettier --write \"**/*.{js,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css,html}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "seed:generate": "node scripts/generate-seed-sql.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "serve:lighthouse": "http-server . -p 4173 -a 127.0.0.1 -c 31536000 --silent",
    "lighthouse": "npx @lhci/cli autorun --config=lighthouserc.json",
    "sitemap": "node scripts/generate-sitemap.js",
    "prices:update": "node scripts/update-price-snapshots.js",
    "archive:media": "node scripts/archive-media.js",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandgraal/retro_games.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/sandgraal/retro_games/issues"
  },
  "homepage": "https://github.com/sandgraal/retro_games#readme",
  "engines": {
    "node": ">=20.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "node-fetch": "^3.3.2",
    "prettier": "^3.6.2",
    "vitest": "^4.0.9"
  },
  "lint-staged": {
    "*.{js,json,md,css,html}": [
      "prettier --write"
    ]
  }
}
